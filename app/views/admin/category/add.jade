extends ../layout
block content
	h2.page-header=pageHeader
	if errors && errors.length
		div.errors
			each error in errors
				p.alert.alert-danger= error.msg
	form.vertical-form(method="post",action=action)
		div.form-group
			label(for="name") 分类名称
			input.form-control.input-lg(name="name",placeholder="请输入标题",value=category.title)
		
		button.btn.btn-lg.btn-info(type="submit")= category._id ? "保存修改" : "添加分类"
